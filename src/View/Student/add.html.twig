{% extends 'layout.html.twig' %}

{% block content %}
	<main class="container">
		<h1 class="text-center mt-3 mb-3">Inscrivez-vous</h1>

		<form method="post" class="container bg-light">

			<input type="hidden" name="action" value="student">

			<h3>
				<label for="firstname" class="form-label">Firstname</label>
			</h3>
			<input id="firstname" type="text" name="firstname" class="form-control mb-4">

			<h3>
				<label for="lastname" class="form-label">Lastname</label>
			</h3>
			<input id="lastname" type="text" name="lastname" class="form-control mb-4">

			<h3>
				<label for="photo" class="form-label" id="form-label-password">Photo</label>
			</h3>
			<input id="photo" type="text" name="photo" class="form-control mb-4">

			<h3>
				<label for="class-select">Select your class:</label>
			</h3>

			<select name="class" id="class">
			{% for class in classes %}
				<option value="{{class.id}}">{{class.name}}</option>
				{% endfor %}
			</select>


			<input type="submit" value="OK" class="btn btn-primary mb-3">
		</form>
	</main>
{% endblock %}
